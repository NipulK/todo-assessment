<template>
  <div class="todo-app">
    <div class="container">
      <header class="app-header">
        <h1>
          <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M9 11l3 3L22 4"></path>
            <path d="M21 12v7a2 2 0 01-2 2H5a2 2 0 01-2-2V5a2 2 0 012-2h11"></path>
          </svg>
          My Tasks
        </h1>
        <p class="subtitle">Stay organized and get things done</p>
      </header>

      <form @submit.prevent="createTask" class="task-form">
        <div class="form-group">
          <input 
            v-model="title" 
            type="text"
            placeholder="Task title" 
            required 
            class="input-field"
            :disabled="loading"
          />
          <input 
            v-model="desc" 
            type="text"
            placeholder="Description (optional)" 
            class="input-field"
            :disabled="loading"
          />
        </div>
        <button type="submit" class="btn-add" :disabled="loading || !title.trim()">
          <svg class="icon-small" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="12" y1="5" x2="12" y2="19"></line>
            <line x1="5" y1="12" x2="19" y2="12"></line>
          </svg>
          Add Task
        </button>
      </form>

      <div v-if="error" class="error-message">
        {{ error }}
      </div>

      <div class="tasks-section">
        <div v-if="loading && tasks.length === 0" class="empty-state">
          <div class="spinner"></div>
          <p>Loading tasks...</p>
        </div>

        <div v-else-if="tasks.length === 0" class="empty-state">
          <svg class="empty-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="12" y1="8" x2="12" y2="12"></line>
            <line x1="12" y1="16" x2="12.01" y2="16"></line>
          </svg>
          <h3>No tasks yet</h3>
          <p>Add your first task to get started!</p>
        </div>

        <transition-group v-else name="task-list" tag="ul" class="task-list">
          <li 
            v-for="task in tasks" 
            :key="task.id" 
            class="task-item"
            :class="{ 'completing': completingIds.has(task.id) }"
          >
            <div class="task-content">
              <div class="task-header">
                <h3 class="task-title">{{ task.title }}</h3>
                <span class="task-date">{{ formatDate(task.createdAt) }}</span>
              </div>
              <p v-if="task.description" class="task-description">{{ task.description }}</p>
            </div>
            <button 
              @click="markDone(task.id)" 
              class="btn-complete"
              :disabled="completingIds.has(task.id)"
            >
              <svg class="icon-small" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              {{ completingIds.has(task.id) ? 'Completing...' : 'Complete' }}
            </button>
          </li>
        </transition-group>
      </div>
    </div>
  </div>
</template>

<script setup>
import { ref, onMounted } from 'vue';

const props = defineProps({ 
  apiUrl: { type: String, default: 'http://localhost:4000' } 
});

const title = ref('');
const desc = ref('');
const tasks = ref([]);
const loading = ref(false);
const error = ref('');
const completingIds = ref(new Set());

async function load() {
  try {
    loading.value = true;
    error.value = '';
    const res = await fetch(`${props.apiUrl}/tasks`);
    if (!res.ok) throw new Error('Failed to load tasks');
    tasks.value = await res.json();
  } catch (err) {
    error.value = 'Failed to load tasks. Please try again.';
    console.error('Load error:', err);
  } finally {
    loading.value = false;
  }
}

onMounted(load);

async function createTask() {
  if (!title.value.trim()) return;
  
  try {
    loading.value = true;
    error.value = '';
    const res = await fetch(`${props.apiUrl}/tasks`, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ 
        title: title.value.trim(), 
        description: desc.value.trim() || undefined 
      })
    });
    
    if (!res.ok) throw new Error('Failed to create task');
    
    title.value = '';
    desc.value = '';
    await load();
  } catch (err) {
    error.value = 'Failed to create task. Please try again.';
    console.error('Create error:', err);
  } finally {
    loading.value = false;
  }
}

async function markDone(id) {
  try {
    completingIds.value.add(id);
    error.value = '';
    const res = await fetch(`${props.apiUrl}/tasks/${id}/done`, { 
      method: 'POST' 
    });
    
    if (!res.ok) throw new Error('Failed to complete task');
    
    // Remove from list with animation
    setTimeout(async () => {
      await load();
      completingIds.value.delete(id);
    }, 300);
  } catch (err) {
    error.value = 'Failed to complete task. Please try again.';
    console.error('Complete error:', err);
    completingIds.value.delete(id);
  }
}

function formatDate(dateString) {
  const date = new Date(dateString);
  const now = new Date();
  const diff = now - date;
  const minutes = Math.floor(diff / 60000);
  const hours = Math.floor(diff / 3600000);
  const days = Math.floor(diff / 86400000);
  
  if (minutes < 1) return 'Just now';
  if (minutes < 60) return `${minutes}m ago`;
  if (hours < 24) return `${hours}h ago`;
  if (days < 7) return `${days}d ago`;
  
  return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
}
</script>

